{
	"name": "aws-thumbnail-generator",
	"version": "1.0.0",
	"description": "Projeto de aprendizado AWS: Upload de imagens para S3, processamento com Lambda e geração de thumbnails",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"start": "node dist/index.js",
		"lint": "eslint src/**/*.ts",
		"format": "biome format --write",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:thumbnail": "jest tests/utils/thumbnailGenerator.test.ts",
		"lambda:build": "cd lambda && npm run build",
		"lambda:deploy": "cd lambda && npm run deploy"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.438.0",
		"@aws-sdk/lib-storage": "^3.438.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"multer": "^2.0.2",
		"sharp": "^0.34.4",
		"ts-node": "^10.9.2",
		"uuid": "^9.0.1",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/cors": "^2.8.14",
		"@types/express": "^5.0.3",
		"@types/jest": "^29.5.5",
		"@types/multer": "^1.4.8",
		"@types/node": "^20.8.0",
		"@types/uuid": "^9.0.5",
		"jest": "^29.7.0",
		"ts-jest": "^29.4.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	},
	"keywords": [
		"aws",
		"s3",
		"lambda",
		"image-processing",
		"thumbnails",
		"typescript",
		"node.js"
	],
	"author": "drefahl",
	"license": "MIT"
}
